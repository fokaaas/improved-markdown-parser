{
  "name": "md-to-html-parser",
  "version": "1.0.0",
  "description": "A simple markdown to html parser",
  "main": "index.js",
  "scripts": {
    "parse": "pnpm tsc && node build/src/index.js",
    "lint": "gts lint",
    "clean": "gts clean",
    "test": "jest",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "keywords": [
    "markdown",
    "html",
    "parser"
  ],
  "author": "Stanislav Basarab",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.23",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "~5.2.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
